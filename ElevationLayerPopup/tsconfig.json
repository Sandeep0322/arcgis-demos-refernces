{
    "compilerOptions": {
        "module": "amd",
        "noImplicitAny": true,
        "sourceMap": true,
        "jsx": "react",
        // "allowJs": true,
        "reactNamespace": "jsxFactory",
        "target": "es6",
        "experimentalDecorators": true,
        "preserveConstEnums": true,
        "suppressImplicitAnyIndexErrors": true
    },
    "include": [
        "./app/*"
    ],
    "exclude": [
        "node_modules"
    ]
}